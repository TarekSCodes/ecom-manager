<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="supplier-container, mainContent" stylesheets="@stylesheets/styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.tarekscodes.controller.SupplierController">
   
   <VBox spacing="20.0">
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
      
      <GridPane hgap="20.0" vgap="20.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES" />
        </rowConstraints>
         
         <children>
            <VBox spacing="5.0">
               <Label styleClass="input-label" text="Lieferantenname" />
               <TextField fx:id="supplierNameField" styleClass="text-input" />
            </VBox>
            
            <VBox spacing="5.0" GridPane.columnIndex="2">
               <Label styleClass="input-label" text="PLZ" />
               <TextField fx:id="plzField" styleClass="text-input" />
            </VBox>
            
            <VBox spacing="5.0" GridPane.rowIndex="1">
               <Label styleClass="input-label" text="Lieferanten Nr." />
               <TextField fx:id="supplierNumberField" styleClass="text-input" />
            </VBox>
            
            <VBox spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <Label styleClass="input-label" text="Stadt" />
               <ComboBox fx:id="cityField" styleClass="combo-box" />
            </VBox>

            <VBox spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="2">
               <Label styleClass="input-label" text="Land" />
               <ComboBox fx:id="countryField" styleClass="combo-box" />
            </VBox>
            
            <VBox spacing="5.0" GridPane.columnIndex="1">
               <Label styleClass="input-label" text="Telefon Nr." />
               <TextField fx:id="phoneNumberField" styleClass="text-input" />
            </VBox>
            
            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <Label styleClass="input-label" text="E-Mail-Adresse" />
               <TextField fx:id="emailField" styleClass="text-input" />
            </VBox>

            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <Label styleClass="input-label" text="Status" />
               <ChoiceBox fx:id="statusField" styleClass="combo-box" />
            </VBox>

            <VBox spacing="5.0" GridPane.rowIndex="2">
               <Label styleClass="input-label" text="Kategorie" />
               <ComboBox fx:id="categoryField" styleClass="combo-box" />
            </VBox>

         </children>
      </GridPane>
      
      <TableView fx:id="supplierTable" styleClass="articleTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="addressColumn" text="Adresse" />
            <TableColumn fx:id="phoneColumn" text="Telefon" />
            <TableColumn fx:id="emailColumn" text="E-Mail" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </VBox>
</VBox>
